{% extends 'base.html.twig' %}

{% block title %}NOS PRODUITS{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-9 justify-content-center mx-auto">

            <h3>Nos produits</h3>

            <div class="row">
                <div><a href="{{ path('products_index') }}" class="btn btn-gold"> <i class='bx bxs-arrow-to-left'></i> Retour</a></div>

                {% for product in category.products %}
                    <div class="col-md-4 mt-4" >
                        <div class="card m-3">
                            <div class="position-relative">
                                <a href="">
                                    <img src="/uploads/images/{{ product.image }}" alt="{{ product.name }}" width="100%" style="height:250px;" class="img-fluid img-thumbnai card-img-tol"></a>
                 
                            </div>
                            <div class="card-body">
                            <div class="row">
                            <div class="col-md-6">
                                <h6 class="card-title"><span class=" text-dark">{{ product.name }}</span></h6> 
                                <!-- Button trigger modal -->
                                <a type="button" class="" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                                    Description
                                </a>

                                <!-- Modal -->
                                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title color-g" id="staticBackdropLabel">Plus d'informations</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                                                <small>{{ product.description }}  </small>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-gold" data-bs-dismiss="modal">Fermer</button>
                                    </div>
                                    </div>
                                </div>
                                </div>
                                <span class="d-block text-dark">Prix : {{ product.price }} â‚¬ 
                                </span>
                                <span class="d-block"><span class="d-block ">
                                    {% if  product.stock  == 1  %}
                                    <small class="text-success">Produit disponible</small>
                                    {% else %}
                                    <small class="text-danger">Produit non disponible</small>
                                    {% endif %}
                                    </span>
                                </span>
                            </div> 
                            <div class="col-md-6">
                                    {% if  product.stock  == 1  %}
                                        <div class="m-3"><a href="{{ path("cart_add", {'id': product.id} ) }}"><button class="btn btn-warning">Ajouter</button></a>
                                        </div>
                                    {% else %}
                                        <div class="m-3"><button class="btn btn-warning text-decoration-line-through " disabled >Ajouter</button></div>
                                    {% endif %}
                            </div>
                            </div>
             
                            </div>
                        </div>
                    </div>

                {% endfor %}
            </div>


        </div>
    </div>
{% endblock %}