{% extends "base.html.twig" %}

{% block title %}users{% endblock %}

{% block body %}

    <div class="py-5 bg-light">
        <div class="container table-responsive">
            <div class="row">
                <h2>liste des users :</h2>

                <div><a href="{{ path('admin_index') }}"> <i class='bx bxs-arrow-to-left'></i> Retour</a></div>

                <table class="table" style="text-align:center;">
                    <thead>
                        <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Prénom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Rôles</th>
                        <th scope="col">Modifier</th>
                        <th scope="col">Supprimer</th>



                        </tr>
                    </thead>
                    {% for user in users %}
                    <tbody>
                        <tr>                
                            <th scope="row"> {{ user.id }}</th>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                            {% for role in user.roles %}
                                {% if role == "ROLE_USER" %}
                                    Utilisateur
                                {% elseif role == "ROLE_MANAGER"  %}
                                    Manager
                                {% elseif role == "ROLE_ADMIN"  %}
                                    Admin
                                {% endif %}
                            {% endfor %} 
                            </td>
                            <td>
                                <a class="btn" href="{{ path('admin_utilisateur_modifier', { 'id' : user.id }) }}">
                                    <i class='bx bx-pencil'></i>
                                </a>
                            </td> 
                            <td>
                                <a href="{{ path('admin_utilisateur_supp', {'id': user.id}) }}">
                                    <i class='bx bx-trash' ></i>                               
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>                
                            <td>il n'y a pas de users</td>
                        </tr>
                    </tbody>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>



{% endblock %}