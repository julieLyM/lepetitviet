{% extends 'base.html.twig' %}

{% block title %}Liste des actualités{% endblock %}

{% block body %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

<div class="container table-responsive">
    <h1 class="mt-4" >Liste des actualités</h1>
    <div><a href="{{ path('admin_index') }}" class="btn btn-gold mb-4"> <i class='bx bxs-arrow-to-left'></i> Retour</a></div>
        <div class="text-center m-4 "><a class="btn btn-gold" href="{{ path('post_create') }}">
               <i class='bx bx-pencil' ></i>  Ecrire une actualité</a></div>

    <table class="table mt-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>Modifier</th>
                <th>Supprimer</th>

            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{post.id}}</td>
                    <td>{{post.name}}</td>
                    <td>{{post.content|raw }}</td>
                    <td>{{post.createdAt|date('d-M-Y')}}</td>
                    <td>
                        <a class="btn btn-warning" href="{{ path('post_modified', {id: post.id}) }}">X</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="{{ path('post_delete', {id: post.id}) }}">X</a>
                    </td>
                </tr>
            {% endfor %}
        
        </tbody>
    </table>

</div>
{% endblock %}
