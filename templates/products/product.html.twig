        <div class="col-md-9 justify-content-center mx-auto">

            <h3 class="title-PageProduct">Nos produits</h3>

            <div class="row product-container">
                {% for product in category.products %}
                    <div class="col-md-4 mt-4">
                        <div class="card">
                            <div class="position-relative">
                                <a href="">
                                    <img src="/uploads/images/product/{{ product.image }}" alt="{{ product.name }}" class="img-fluid img-thumbnai card-img-tol"></a>
                                <div class="card-img-overlay d-flex justify-content-end align-items-end">
                                    <button type="button" class="btn btn-light rounded-circle" data-toggle="button" aria-pressed="false" autocomplete="off"><i class="far fa-heart"></i></button>
                                </div>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title"><small><span class="d-block title-PageProduct">Nom du produit : </span>{{ product.name }}</small></h5>
                                <span class="d-block"><span class="d-block title-PageProduct">Prix : </span>{{ (product.price) }} â‚¬</span>
                                <div class="row m-3">

                                    {# <a href="{{ path('products_detail', {
                                        'category': product.category.slug,
                                        'slug': product.slug,
                                        'id': product.id
                                        }) }}" class="btn btn-primary">Lire la suite</a> #}
                                    <a href="{{ path("cart_add", {'id': product.id} ) }}"><button class="btn btn-warning">ajouter</button></a>

                                </div>
                                
                            </div>
                        </div>
                    </div>

                {% endfor %}
            </div>

            <button class="btn btn-primary m-3 btn-sm"><a href="{{ path('products_index') }}">Retour</a></button>

        </div>
    </div>
{% endblock %}