{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
        <div class="col-md m-5 d-flex justify-content-center">                  
        <div class="card text-center" style="width: 25rem;">
            <h1 class="h3 m-3 font-weight-normal color-g">Générer un nouveau mot de passe</h1>
            <div class="card-body">
       
            {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}
                <button class="btn btn-gold">Valider</button>
            {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
{% endblock %}
