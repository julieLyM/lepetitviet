{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}


        <div class="col-md mt-5 d-flex justify-content-center">                  
            <div class="card text-center" style="width:29rem" >
            <h1 class="h3 m-3 font-weight-normal" style="color:goldenrod">Page d'inscription</h1>
            <div class="card-body">
                {{ form_start(registrationForm,{'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.plainPassword, {
                                label: 'Votre mot de passe *'
                            }) }}
                            {{ form_row(registrationForm.adress) }}
                            {{ form_row(registrationForm.zipcode) }}
                        </div>

                        <div class="col-md-6">
                            {{ form_row(registrationForm.lastname) }}
                            {{ form_row(registrationForm.firstname) }}
                            {{ form_row(registrationForm.city) }}
                            {{ form_row(registrationForm.phone) }}
                        </div>
                    </div>                            
   <div class="text-center">
                               {{ form_row(registrationForm.agreeTerms) }}

   <button type="submit" class="btn btn-block" style="background-color: goldenrod;">S'inscrire</button></div>
                {{ form_end(registrationForm) }}
                 
            </div>
        </div>
    </div>
{% endblock %}
