{% block body %}

    <h3 class="text-center color-g m-5">Enregistrement / modification d'un nouveau Produit</h3>

    <div class="container w-50">
        <div><a href="{{ path('admin_list_all_products') }}" class="btn btn-gold mb-3"> <i class='bx bxs-arrow-to-left'></i> Retour</a></div>
